pipeline {
    agent any
    stages {
        stage('Checkout C칩digo') {
            steps {
                // Clonamos el repositorio completo para asegurarnos de que Jenkins tenga todo el c칩digo
                git branch: 'main', url: 'https://github.com/JmJimenez10/security-web.git'
            }
        }
        stage('Build Maven') {
            steps {
                // Entramos a la carpeta del backend donde est치 el pom.xml y mvnw
                dir('security-spring-boot') {
                    sh './mvnw clean package -DskipTests'
                }
            }
        }
        stage('Build Imagen Docker') {
            steps {
                // Entramos a la carpeta donde est치 el Dockerfile y lo construimos
                dir('security-spring-boot') {
                    sh 'docker build -t backend-app:latest .'
                }
            }
        }
        stage('Run Contenedor Docker') {
            steps {
                // Ejecutamos el contenedor de Docker usando la imagen creada
                sh '''
                    docker rm -f backend-container || true
                    docker run -d --name backend-container -p 8080:8080 backend-app:latest
                '''
            }
        }
    }
}
